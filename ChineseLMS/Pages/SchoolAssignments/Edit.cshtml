@page
@model ChineseLMS.Pages.SchoolAssignments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-4">
        <div>
            <partial name="~/Pages/Dashboard/_OptionsList_SchoolAssignment.cshtml" />
        </div>
        <div>
            <partial name="~/Pages/Dashboard/_ClassList.cshtml" />
        </div>
    </div>
    <div class="col-8">
        <div class="list-group vh-100">
            <div class="list-group-item shadow bg-white rounded">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SchoolAssignment.ID" />
                    <div class="row pl-1 mb-0 px-3">
                        <div class="col-8 px-0">
                            <a class="text-decoration-none" asp-page="./Index" style="color:#0078cd;"><strong>‚¨ÖÔ∏è See All Assignments</strong></a>
                        </div>
                        <div class="col-4 text-end">
                            <input type="submit" value="Finish Editing ‚úçüèª" class="text-decoration-none border-0 bg-white font-weight-bold" style="color:#0078cd"></input>

                        </div>
                    </div>
                    <div class="list-group h-100 px-2 py-3">
                        @*Header*@
                        <div class="list-group-item shadow pl-3 mb-3 bg-white rounded">
                            <div class="row pl-0 mb-1 px-0">
                                <div class="col-8 font-weight-bold">
                                    <h3>
                                        <strong>
                                            <div class="form-group">
                                                <select asp-for="SchoolAssignment.CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
                                                <span asp-validation-for="SchoolAssignment.CourseID" class="text-danger"></span>
                                                <input asp-for="SchoolAssignment.Title" class="form-control" />
                                                <span asp-validation-for="SchoolAssignment.Title" class="text-danger"></span>
                                            </div>
                                        </strong>
                                    </h3>
                                </div>
                                <div class="col-4 text-end">
                                    <h3 style="color:#07ae35;">
                                        <strong>
                                            <input asp-for="SchoolAssignment.TaskDueStartTime" class="form-control" value="@Model.SchoolAssignment.TaskDueStartTime.ToString("yyyy-MM-dd HH:mm")" type="datetime-local" />
                                            <span asp-validation-for="SchoolAssignment.TaskDueStartTime" class="text-danger"></span>
                                        </strong>
                                    </h3>
                                    <h3 style="color:#07ae35;">
                                        <strong>
                                            <input asp-for="SchoolAssignment.TaskDueEndTime" class="form-control" value="@Model.SchoolAssignment.TaskDueEndTime.ToString("yyyy-MM-dd HH:mm")" type="datetime-local" />
                                            <span asp-validation-for="SchoolAssignment.TaskDueEndTime" class="text-danger"></span>
                                        </strong>
                                    </h3>
                                </div>
                            </div>
                        </div>

                        @*Details*@
                        <div class="list-group-item shadow pl-3 mb-3 bg-white rounded h-50">
                            <div class="row">
                                <div class="col-12 font-weight-bold">
                                    <h5><strong>Task Details</strong></h5>
                                    <br />
                                    <textarea asp-for="SchoolAssignment.SchoolAssignmentDetails" class="form-control"></textarea>
                                    <span asp-validation-for="SchoolAssignment.SchoolAssignmentDetails" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @*Tasks*@
                        <div class="list-group-item shadow pl-3 mb-3 bg-white rounded h-25">
                            <div class="row">
                                <div class="col-8 font-weight-bold">
                                    <h5><strong>Todos</strong></h5>
                                    <br />



                                    @if (ViewBag.SpecificTodos is not null)
                                    {
                                        @foreach (var todo in ViewBag.SpecificTodos)
                                        {
                                            <a class="shadow p-3 mb-3 bg-white rounded list-group-item list-group-item-action border-0">
                                                <div class="row">
                                                    <div class="col-10 font-weight-bold">
                                                        <h7>
                                                            <strong>
                                                                @todo.TodoName
                                                            </strong>
                                                        </h7>
                                                    </div>
                                                    <div class="col-2 text-end">
                                                        @*<label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="@todo.Checked" />*@

                                                        <input onclick="return false;" type='checkbox' " + @todo.Checked ? " checked" : "" + "   />

                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @*Add HTML Scripts*@
            @*For TinyMCE*@
            <script src="https://cdn.tiny.cloud/1/efpq6i5ajrlj903xs6dxfgipoqrso7jzu8p59ctoo4w2g7mu/tinymce/5/tinymce.min.js"
                    referrerpolicy="origin"></script>
            <script>tinymce.init({
                    selector: "textarea"
                });</script>

            <script>$(document).ready(function () {

                })</script>

            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>

