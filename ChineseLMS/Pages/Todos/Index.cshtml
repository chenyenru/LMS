@page
@model ChineseLMS.Pages.Todos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-4">
        <div>
            <partial name="~/Pages/Dashboard/_OptionsList_Todos.cshtml" />
        </div>
        <div>
            <partial name="~/Pages/Dashboard/_ClassList.cshtml" />
        </div>
    </div>
    <div class="col-8">
        <h1>Todos</h1>
        <p>
            <a asp-page="Create">
                <button type="button" class="btn btn-success">Create</button>
            </a>
        </p>
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Todo[0].TodoName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Todo[0].TodoDueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Todo[0].Checked)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Todo[0].ByTeacher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Todo[0].SchoolAssignment)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Todo)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TodoName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TodoDueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Checked)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ByTeacher)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SchoolAssignment.Title)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


